// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/typescript-monorepo/apps/vscode"],
			"outFiles": [
				"${workspaceRoot}/typescript-monorepo/apps/vscode/out/**/*.js",
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": {
				"type": "npm",
				"script": "build",
				"path": "typescript-monorepo/apps/vscode"
			}
		}
	]
}
