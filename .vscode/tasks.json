{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build JL4 VSCode extension",
      "type": "npm",
      "script": "build",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}/ts-apps/vscode"
      }
    },
    {
      "label": "Package (and prepublish) JL4 VSCode extension",
      "type": "npm",
      "script": "package",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc"],
      "options": {
        "cwd": "${workspaceFolder}/ts-apps/vscode"
      }
    },
    {
      "label": "Start Development Server for JL4 VSCode Extension",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc-watch"],
      "options": {
        "cwd": "${workspaceFolder}/ts-apps/vscode"
      }
    },
    {
      "label": "Format TS Monorepo",
      "type": "npm",
      "script": "format",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
