{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["OPENAI_API_KEY", "REMOTE_DECISION_SERVICE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        "out/**",
        "build/**",
        "**/*.tsbuildinfo",
        ".svelte-kit/**",
        "ts-apps/vscode/static/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "test": {
      "dependsOn": ["^check"],
      "passThroughEnv": ["XAUTHORITY", "DISPLAY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
