cabal-version: 3.0
name: jl4
version: 0.1
build-type: Simple
tested-with: GHC==9.6.6

common defaults
  default-language: GHC2021
  ghc-options: -Wall
  default-extensions:
    DeriveAnyClass
    DerivingStrategies
    DerivingVia
    DuplicateRecordFields
    NoFieldSelectors
    OverloadedRecordDot
    OverloadedStrings
    OverloadedLabels
    -- This is annoying with fourmolu
    NoImportQualifiedPost
  build-depends:
    base

library
  import: defaults
  hs-source-dirs: src
  build-depends:
    containers,
    extra,
    megaparsec,
    mtl,
    optics,
    optics-core,
    optics-extra,
    optparse-applicative,
    parser-combinators,
    pretty-simple,
    simala,
    text,
    transformers,
    tree-diff
  exposed-modules:
    L4.Annotation
    L4.CodeGen
    L4.ExactPrint
    L4.Main
    L4.TypeCheck
    L4.Scope
    L4.Syntax
    L4.Lexer
    L4.Parser
    L4.ParserCombinators

executable jl4-cli
  import: defaults
  hs-source-dirs: app
  build-depends:
    jl4
  main-is: Main.hs

executable jl4-lsp
  import: defaults
  hs-source-dirs: lsp
  build-depends:
    jl4,
    aeson,
    containers,
    co-log-core,
    directory,
    extra,
    filepath,
    lens,
    lsp-types ^>=2.3.0.0,
    lsp ^>=2.7.0.0,
    optics,
    prettyprinter,
    stm,
    text,
    text-rope,
    transformers,
  main-is: Main.hs
  other-modules: Ladder

test-suite jl4-test
  import: defaults
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Main.hs
  other-modules:
    Paths_jl4
  autogen-modules:
    Paths_jl4
  build-depends:
    directory,
    filepath,
    Glob,
    hspec,
    hspec-golden,
    silently,
    simala,
    text,
    jl4
