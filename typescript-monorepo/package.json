{
  "name": "typescript-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,json,css,scss,md,html,yaml,svelte}\"",
    "format:check": "prettier --check .",
    "postinstall": "npm rm @types/glob @types/minimatch"
  },
  "devDependencies": {
    "prettier": "3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@11.0.0",
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "rimraf": "^4.0.0",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1"
  }
}
